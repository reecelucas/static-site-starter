<!doctype html>
<html class="no-js" lang="en-GB">
    <head>
        <meta charset="utf-8">
        <meta http-equiv="x-ua-compatible" content="ie=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>{{ metadata.title }}{% if title %} | {{ title }}{% endif %}</title>

        {% for font in webfonts.fonts %}
            <link rel="preload" href="{{ font.path }}" as="font" type="font/woff2" crossorigin>
        {% endfor %}

        {# `data-inline` attribute used by gulp `inlineCritial` task #}
        <link href="/css/main.css" rel="stylesheet" type="text/css" data-inline>
        <script src="/js/head.js" data-inline></script>

        <link rel="canonical" href="{{ metadata.url }}">
        <meta name="description" content="{{ metadata.description }}">

        <link rel="apple-touch-icon" sizes="180x180" href="/assets/favicons/apple-touch-icon.png">
        <link rel="icon" type="image/png" href="/assets/favicons/favicon-32x32.png" sizes="32x32">
        <link rel="icon" type="image/png" href="/assets/favicons/favicon-16x16.png" sizes="16x16">
        <link rel="mask-icon" href="/assets/favicons/safari-pinned-tab.svg">
        <link rel="shortcut icon" href="/assets/favicons/favicon.ico">
        <meta name="msapplication-config" content="/assets/favicons/browsermetadata.xml">
        <meta name="application-name" content="{{ metadata.title }}{% if title %} | {{ title }}{% endif %}">
        <link rel="manifest" href="/assets/favicons/manifest.json">
        <meta name="theme-color" content="#ffffff">

        <meta property="og:title" content="{{ metadata.title }}{% if title %} | {{ title }}{% endif %}">
        <meta property="og:description" content="{{ metadata.description }}">
        <meta property="og:image" content="{{ metadata.url }}{{ metadata.social_share_image }}">
        <meta property="og:url" content="{{ metadata.url }}">
        <meta name="twitter:card" content="summary">
        <meta name="og:site_name" content="{{ metadata.title }}{% if title %} | {{ title }}{% endif %}">
        <meta name="twitter:image:alt" content="{{ metadata.social_share_image_alt }}">
    </head>

